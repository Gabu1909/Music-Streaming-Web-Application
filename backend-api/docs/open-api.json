  "paths": {
    "/api/songs": {
      "get": {
        "summary": "Get songs with filtering and pagination",
        "description": "Retrieve a paginated list of songs with optional title filtering",
        "operationId": "getSongsByFilter",
        "parameters": [
          {
            "in": "query",
            "name": "title",
            "schema": {
              "type": "string"
            },
            "description": "Filter songs by title (partial match)"
          },
          {
            "$ref": "#/components/parameters/limitParam"
          },
          {
            "$ref": "#/components/parameters/pageParam"
          }
        ],
        "tags": ["Songs"],
        "responses": {
          "200": {
            "description": "Successfully retrieved songs list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success"]
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "songs": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Song"
                          }
                        },
                        "metadata": {
                          "type": "object",
                          "properties": {
                            "totalRecords": {
                              "type": "integer"
                            },
                            "page": {
                              "type": "integer"
                            },
                            "limit": {
                              "type": "integer"
                            },
                            "totalPages": {
                              "type": "integer"
                            }
                          }
                        }
                      },
                      "required": ["songs", "metadata"]
                    }
                  },
                  "required": ["status", "data"]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      },
      "post": {
        "summary": "Create a new song",
        "description": "Create a new song with audio file upload",
        "operationId": "createSong",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "allOf": [
                  {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "maxLength": 255,
                        "description": "Song title"
                      },
                      "artist": {
                        "type": "string",
                        "maxLength": 255,
                        "description": "Artist name"
                      },
                      "album": {
                        "type": "string",
                        "nullable": true
                      },
                      "audio_files": {
                        "type": "string",
                        "format": "binary"
                      }
                    }
                  },
                  {
                    "required": ["audio_files", "title", "artist"]
                  }
                ]
              }
            }
          }
        },
        "tags": ["Songs"],
        "responses": {
          "201": {
            "description": "Song created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success"]
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "song": {
                          "$ref": "#/components/schemas/Song"
                        }
                      },
                      "required": ["song"]
                    }
                  },
                  "required": ["status", "data"]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },

          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      },
      "delete": {
        "summary": "Delete all songs",
        "description": "Delete all songs from the database",
        "operationId": "deleteAllSongs",
        "tags": ["Songs"],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Success"
          },
          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      }
    },
    "/api/songs/{id}": {
      "get": {
        "summary": "Get song by ID",
