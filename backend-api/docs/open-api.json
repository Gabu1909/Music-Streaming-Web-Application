  "components": {
    "schemas": {
      "Song": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true,
            "description": "Auto-generated song ID"
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "description": "Song title"
          },
          "artist": {
            "type": "string",
            "maxLength": 255,
            "description": "Artist name"
          },
          "album": {
            "type": "string",
            "nullable": true
          },

          "audioUrl": {
            "type": "string",
            "format": "binary",
            "maxLength": 500,
            "readOnly": true,
            "description": "Audio file URL"
          },
          "imgUrl": {
            "type": "string",
            "format": "binary",
            "maxLength": 500,
            "readOnly": true,
            "description": "Image file URL"
          },
          "duration": {
            "type": "float"
          },
          "createdAt": {
            "type": "string",
            "format": "date",
            "readOnly": true,
            "description": "Creation timestamp",
            "example": "2025-06-18T10:30:00Z"
          }
        },
        "required": ["id", "title", "artist", "audioUrl"]
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["success"]
          },
          "message": {
            "type": "string",
            "example": "Operation completed successfully"
          }
        },
        "required": ["status", "message"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["error"],
            "description": "Error status"
          },
          "message": {
            "type": "string",
            "description": "Error message",
            "example": "Validation failed"
          },
