              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success"]
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "song": {
                          "$ref": "#/components/schemas/Song"
                        }
                      },
                      "required": ["song"]
                    }
                  },
                  "required": ["status", "data"]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/404NotFound"
          },
          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      },

      "put": {
        "summary": "Update song by ID",
        "description": "Update an existing song by its ID",
        "operationId": "updateSong",
        "parameters": [
          {
            "$ref": "#/components/parameters/songIdParam"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "maxLength": 255,
                    "description": "Song title"
                  },
                  "artist": {
                    "type": "string",
                    "maxLength": 255,
                    "description": "Artist name"
                  },
                  "album": {
                    "type": "string",
                    "nullable": true
                  },
                  "audio_files": {
                    "type": "string",
                    "format": "binary"
                  },
                  "cover": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["title", "artist", "audio_files"]
              }
            }
          }
        },
        "tags": ["Songs"],
        "responses": {
          "200": {
            "description": "Song updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success"]
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "song": {
                          "$ref": "#/components/schemas/Song"
                        }
                      },
                      "required": ["song"]
                    }
                  },
                  "required": ["status", "data"]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/404NotFound"
          },

          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      },
      "delete": {
        "summary": "Delete song by ID",
        "description": "Delete a specific song by its ID",
        "operationId": "deleteSong",
        "parameters": [
          {
            "$ref": "#/components/parameters/songIdParam"
          }
        ],
        "tags": ["Songs"],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Success"
          },
          "400": {
            "$ref": "#/components/responses/400BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/404NotFound"
          },
          "500": {
            "$ref": "#/components/responses/500InternalServerError"
          }
        }
      }
    },
